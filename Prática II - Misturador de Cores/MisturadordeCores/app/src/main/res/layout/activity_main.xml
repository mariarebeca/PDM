<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/llshowColor"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        >

        <TextView
        android:id="@+id/TvShowColor"
        android:text="Cor em Hexa"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSeekRed"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/SeekBarRed"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:thumbTint="#F44336"
            android:progressTint="#F44336"
            android:max="255">
        </SeekBar>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSeekGreen"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/SeekBarGreen"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:thumbTint="#50AA41"
            android:progressTint="#50AA41"
            android:max="255">
        </SeekBar>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llSeekBlue"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/SeekBarBlue"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:thumbTint="#1556C5"
            android:progressTint="#1556C5"
            android:max="255">
        </SeekBar>

    </LinearLayout>
</LinearLayout>